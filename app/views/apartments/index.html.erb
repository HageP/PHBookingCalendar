<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

<div class="page-header">
  <h1>
    Apartments
    <a href="/apartments/new" class="btn btn-lg btn-success">New Apartment</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "apartments_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :apartment_name_cont, "Apartment name contains" %>
    <%= f.text_field :apartment_name_cont, :class => "form-control", :placeholder => "Apartment name contains" %>
  </div>

<div class="form-group">
  <%= f.label :bathrooms, "Bathrooms" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :bathrooms_gteq, :class => "form-control", :placeholder => "Bathrooms greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :bathrooms_lteq, :class => "form-control", :placeholder => "Bathrooms less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :bedrooms, "Bedrooms" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :bedrooms_gteq, :class => "form-control", :placeholder => "Bedrooms greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :bedrooms_lteq, :class => "form-control", :placeholder => "Bedrooms less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :zip, "Zip" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :zip_gteq, :class => "form-control", :placeholder => "Zip greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :zip_lteq, :class => "form-control", :placeholder => "Zip less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :state_cont, "State contains" %>
    <%= f.text_field :state_cont, :class => "form-control", :placeholder => "State contains" %>
  </div>

<div class="form-group">
    <%= f.label :city_cont, "City contains" %>
    <%= f.text_field :city_cont, :class => "form-control", :placeholder => "City contains" %>
  </div>

<div class="form-group">
    <%= f.label :address_cont, "Address contains" %>
    <%= f.text_field :address_cont, :class => "form-control", :placeholder => "Address contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Event Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='datesgteqcreated_atPicker'>
                  <%= f.text_field :dates_created_at_gteq, :class => "form-control", :placeholder => "Event Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='dateslteqcreated_atPicker'>
                  <%= f.text_field :dates_created_at_lteq, :class => "form-control", :placeholder => "Event Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#datesgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#dateslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#datesgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#dateslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#dateslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#datesgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :lease_start, "Lease Lease start" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='leasesgteqlease_startPicker'>
                  <%= f.text_field :leases_lease_start_gteq, :class => "form-control", :placeholder => "Lease Lease start greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='leaseslteqlease_startPicker'>
                  <%= f.text_field :leases_lease_start_lteq, :class => "form-control", :placeholder => "Lease Lease start less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#leasesgteqlease_startPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#leaseslteqlease_startPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#leasesgteqlease_startPicker').on("dp.change", function (e) {
                  $('#leaseslteqlease_startPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#leaseslteqlease_startPicker').on("dp.change", function (e) {
                  $('#leasesgteqlease_startPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/apartments" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#apartments_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Apartment name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Bedrooms</th>
        <th>Bathrooms</th>
        <th>Actions</th>
      </tr>

      <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.apartment_name %></td>
        <td><%= apartment.address %></td>
        <td><%= apartment.city %></td>
        <td><%= apartment.state %></td>
        <td><%= apartment.zip %></td>
        <td><%= apartment.bedrooms %></td>
        <td><%= apartment.bathrooms %></td>
        <td>
          <a href="/apartments/<%= apartment.id %>" class="btn btn-primary">Show</a>
          <a href="/apartments/<%= apartment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_apartment/<%= apartment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @apartments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
