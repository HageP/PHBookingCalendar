<div class="page-header">
  <h1>
    Tenants
    <a href="/tenants/new" class="btn btn-lg btn-success">New Tenant</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "tenants_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :tenant_name_cont, "Tenant name contains" %>
    <%= f.text_field :tenant_name_cont, :class => "form-control", :placeholder => "Tenant name contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Event Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='datesgteqcreated_atPicker'>
                  <%= f.text_field :dates_created_at_gteq, :class => "form-control", :placeholder => "Event Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='dateslteqcreated_atPicker'>
                  <%= f.text_field :dates_created_at_lteq, :class => "form-control", :placeholder => "Event Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#datesgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#dateslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#datesgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#dateslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#dateslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#datesgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :lease_start, "Lease Lease start" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='leasesgteqlease_startPicker'>
                  <%= f.text_field :leases_lease_start_gteq, :class => "form-control", :placeholder => "Lease Lease start greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='leaseslteqlease_startPicker'>
                  <%= f.text_field :leases_lease_start_lteq, :class => "form-control", :placeholder => "Lease Lease start less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#leasesgteqlease_startPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#leaseslteqlease_startPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#leasesgteqlease_startPicker').on("dp.change", function (e) {
                  $('#leaseslteqlease_startPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#leaseslteqlease_startPicker').on("dp.change", function (e) {
                  $('#leasesgteqlease_startPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/tenants" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#tenants_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Tenant name</th>
        <th>Actions</th>
      </tr>

      <% @tenants.each do |tenant| %>
      <tr>
        <td><%= tenant.tenant_name %></td>
        <td>
          <a href="/tenants/<%= tenant.id %>" class="btn btn-primary">Show</a>
          <a href="/tenants/<%= tenant.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_tenant/<%= tenant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @tenants, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
