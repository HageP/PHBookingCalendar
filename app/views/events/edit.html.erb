<!-- Validation failure messages -->
<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Event #<%= @event.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_event/<%= @event.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for day_of_week -->
      <div class="form-group">
        <label for="day_of_week" class="control-label">
          Day of week
        </label>

        <input type="text" id="day_of_week" name="day_of_week" placeholder="Day of week" class="form-control" value="<%= @event.day_of_week %>">
      </div>

      <!-- Label and input for apartment_id -->
      <div class="form-group">
        <label for="apartment_id" class="control-label">
          Apartment
        </label>

        <%= select_tag(:apartment_id, options_from_collection_for_select(Apartment.all, :id, :apartment_name, @event.apartment_id), :class => "form-control") %>
      </div>

      <!-- Label and input for tenant_id -->
      <div class="form-group">
        <label for="tenant_id" class="control-label">
          Tenant
        </label>

        <%= select_tag(:tenant_id, options_from_collection_for_select(Tenant.all, :id, :tenant_name, @event.tenant_id), :class => "form-control") %>
      </div>

      <!-- Label and input for status_id -->
      <div class="form-group">
        <label for="status_id" class="control-label">
          Status
        </label>

        <%= select_tag(:status_id, options_from_collection_for_select(Status.all, :id, :status_name, @event.status_id), :class => "form-control") %>
      </div>

      <!-- Label and input for lease_id -->
      <div class="form-group">
        <label for="lease_id" class="control-label">
          Lease
        </label>

        <%= select_tag(:lease_id, options_from_collection_for_select(Lease.all, :id, :lease_start, @event.lease_id), :class => "form-control") %>
      </div>

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @event.title %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @event.description %>">
      </div>

      <!-- Label and input for start_time -->
      <div class="form-group">
        <label for="start_time" class="control-label">
          Start time
        </label>

        <input type="text" id="start_time" name="start_time" placeholder="Start time" class="form-control" value="<%= @event.start_time %>">
      </div>

      <!-- Label and input for end_time -->
      <div class="form-group">
        <label for="end_time" class="control-label">
          End time
        </label>

        <input type="text" id="end_time" name="end_time" placeholder="End time" class="form-control" value="<%= @event.end_time %>">
      </div>

      <!-- Label and input for resourceId -->
      <div class="form-group">
        <label for="resourceId" class="control-label">
          Resourceid
        </label>

        <input type="text" id="resourceId" name="resourceId" placeholder="Resourceid" class="form-control" value="<%= @event.resourceId %>">
      </div>

      <button class="btn btn-warning">
        Update Event
      </button>
      or
      <a href="/events/<%= @event.id %>">Cancel</a>
    </form>
  </div>
</div>
