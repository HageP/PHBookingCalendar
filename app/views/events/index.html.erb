<div class="page-header">
  <h1>
    Events
    <a href="/events/new" class="btn btn-lg btn-success">New Event</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Day of week</th>
        <th>Apartment</th>
        <th>Tenant</th>
        <th>Status</th>
        <th>Lease</th>
        <th>Title</th>
        <th>Description</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Resourceid</th>
        <th>Actions</th>
      </tr>

      <% @events.each do |event| %>
      <tr>
        <td><%= event.day_of_week %></td>
        <td><%= event.apartment.apartment_name %></td>
        <td><%= event.tenant.tenant_name %></td>
        <td><%= event.status.status_name %></td>
        <td><%= event.lease.lease_start %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.resourceid %></td>
        <td>
          <a href="/events/<%= event.id %>" class="btn btn-primary">Show</a>
          <a href="/events/<%= event.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_event/<%= event.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @events, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
