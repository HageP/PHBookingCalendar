      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/events" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#events_filters">
      Show Filters
